@model IEnumerable<Web_AppleBar.Models.IphoneRepair_Battery>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead class="thead-light">
                    <tr class="d-flex">
                        <th scope="col" class="col-1">#</th>
                        <th scope="col" class="col-3">Title</th>
                        <th scope="col" class="col-5">Contents</th>
                        <th scope="col" class="col-2">Image</th>
                        <th scope="col" class="col-1">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="d-flex">
                            <th scope="row" class="col-1">@item.ID</th>
                            <td class="col-3"><input type="text" value="@item.Title" class="w-100" /></td>
                            <td class="col-5"><textarea class="w-100 h-100">@item.Contents</textarea></td>
                            <td class="col-2">
                                <img src="@Url.Content("~/Resource/Img/" + @item.Img+".jpg")" />
                                <br />
                                <input type="file" value="上傳" />
                            </td>
                            <td class="col-1">
                                <input class="btn btn-primary my-1" type="button" value="更新" />
                                <br />
                                <input class="btn btn-danger my-1" type="button" value="刪除" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>